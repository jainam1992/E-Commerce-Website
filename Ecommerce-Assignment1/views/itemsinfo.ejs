<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>JS Deals</title>
<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
<link rel="stylesheet" href="css/style.css" type="text/css" media="all" />
<!--[if lte IE 6]><link rel="stylesheet" href="css/ie6.css" type="text/css" media="all" /><![endif]-->
<script src="js/jquery-1.4.1.min.js" type="text/javascript"></script>
<script src="js/jquery.jcarousel.pack.js" type="text/javascript"></script>
<script src="js/jquery-func.js" type="text/javascript"></script>
<script src="date.js" type="text/javascript"></script>
</head>
<body>
<!-- Shell -->
<div class="shell">
  <!-- Header -->
  <div id="header">
    <h1 id="logo.gif"><a href="/"><br>JS-Deals</br></a></h1>    
      </div>
  <!-- End Header -->
  
 <!-- Sidebar -->
    <div id="sidebar"> 
 		<!-- Categories -->
      <div class="box categories">
        <h2>Categories <span></span></h2>
        <div class="box-content">
          <ul>
          <li><a href="/">Home</a></li>
            <% menu_data.forEach(function(menu){ {%>
             <li><a href="<%=menu.menu_url%>" alt="" /><%=menu.menu_name%></a></li>
   			<% }}) %>            
            </ul>
        </div>
      </div>
      <!-- End Categories -->
  </div>
  
  
  <table width="75%" height="75%" align="right" border="2">
  <tr>
    <td width="300px" height="100% align="right" align="top">
    
                   
            <% product_data.forEach(function(product){ {%>
              <input type = "hidden" id="prod_start_date" value="<%=product.startdate%>"/>
           	<input type = "hidden" id="prod_end_date" value="<%=product.enddate%>"/>      
             <li><a href="<%=product.url%>"><img src="<%=product.path%>" float="right" width="700" height="400" alt=""/></a></li>
             <table border="2" cellspacing="3" align="center">
             <br>
             <br>
             <%if(product.category!="" && product.category!=null)
             {%>
             <tr>
             <td>
             	<b>Category:</>
             </td>
             <td>
             	<%=product.category%>
             </td>
             </tr>
             <%}%>
             
             <%if(product.subcategory!="" && product.subcategory!=null)
             {%>
             <tr>
             <td>
             	<b>Sub-Category: </b>
             </td>
             <td>
             	<%=product.subcategory%>
             </td>
             </tr>
             <%}%>
             
             <%if(product.name!="" && product.name!=null)
             {%>
             <tr>
             <td>
             	<b>NAME:</b>
             </td>
             <td>
             	<%=product.name%>
             </td>
             </tr>
             <%}%>
             
             <%if(product.spec!="" && product.spec!=null)
             {%>
             <tr>
             <td>
             	<b>Description:</b>
             </td>
             <td>
             	<%=product.spec%>
             </td>
             </tr>
             <%}%>
             
             <%if(product.price!="" && product.price!=null)
             {%>
             <tr>
             <td>
             	<b>Price:</b>
             </td>
             <td>
             	<%=product.price%>
             </td>
             </tr>
             <%}%>
             
             
             <%if(product.size!="" && product.size!=null)
             {%>
             <tr>
             <td>
             	<b>Size:</b>
             </td>
             <td>
             	<%=product.size%>
             </td>
             </tr>
             <%}%>   
             
             
             <%if(product.manufacturing!="" && product.manufacturing!=null)
             {%>
             <tr>
             <td>
             	<b>Manufacturing-Year:</b>
             </td>
             <td>
             	
             	<%=product.manufacturing%>
             </td>
             </tr>
             <%}%>  
             
             
             <%if(product.id!="" && product.id!=null)
             {%>
             <tr>
             <td>
             	<b>Product ID:</b>
             </td>
             <td>
             	<%=product.id%>
             </td>
             </tr>
             <%}%>            	
                                                  
      <button class="btn btn-success btn-lg pull-right" style="width: 200px; height: 60px; font-size:2.5em" type="button" onclick="buy(<%=product.id%>)">Buy</button>                 
              
              </table>
                           
             
   			<% }}) %>  			
   		<p align="right">	   			   			                       
      
    </p>
    </td>
      </tr>    
       
      </table>
      

        <script>
        
        
        function buy(id)
				{
				var startDateObj = Date.parse($("#prod_start_date").val(), "mm/dd/yyyy");
				if($("#prod_end_date").val()=="")
				{
				var endDateObj =  Date.today();
				}
				else
				{
				var endDateObj = Date.parse($("#prod_end_date").val(), "mm/dd/yyyy");
				}
				var today = Date.today();
				var i = Date.today().compareTo(startDateObj); 
				var j = Date.today().compareTo(endDateObj);
				if(i>=0 && j<=0)
				{
				window.location.replace("http://localhost:8081/JSorderManagement?prodId="+id);
				}
				else
				{
				alert("Sorry...This product is no longer available to buy...!!!");
				}
				
				
				}
        </script>
  
